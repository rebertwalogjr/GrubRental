@model Transaction
@{
    ViewData["Title"] = "Delete Transaction Details";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Rent a Car</h2>
            <hr />
        </div>
        <input asp-for="TransactionID" hidden/>
        <div class="mb-3">
            <label asp-for="BorrowedDate"></label>
            <input asp-for="BorrowedDate" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="ReturnDate"></label>
            <input asp-for="ReturnDate" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="CarId"></label>
            <input asp-for="CarId" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="RenterId"></label>
            <input asp-for="RenterId" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="Transaction" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Cancel
        </a>
    </div>
</form>