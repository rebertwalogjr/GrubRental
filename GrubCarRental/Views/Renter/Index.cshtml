@model IEnumerable<Renter>
@{
    ViewData["Title"] = "Renter's Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Renters List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Renter" asp-action="Create" class="btn btn-primary">
                New Renter
            </a>
        </div>
        <form class="d-flex col-6" asp-controller="Renter" asp-action="Search">
            <input class="form-control me-sm-2" type="text" placeholder="Search">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th>
                Gender
            </th>
            <th>
                LicenseNumber
            </th>
            <th class="text-center" colspan="2">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var renter in Model)
        {
            <tr>
                <th>
                    @renter.RenterId
                </th>
                <td width="20%">
                    @(renter.FirstName + " " + renter.LastName)
                </td>
                <td width="30%">
                    @renter.Address
                </td>
                <td>
                    @renter.Gender
                </td>
                <td>
                    @renter.LicenseNumber
                </td>
                <td class="text-center">
                    <a asp-controller="Renter" asp-action="Edit" asp-route-id="@renter.RenterId" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil"></i>
                    </a>
                </td>
                <td class="text-center">
                    <a asp-controller="Renter" asp-action="Delete" asp-route-id="@renter.RenterId" class="btn btn-danger mx-2">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


