@model IEnumerable<Renter>
@{
    ViewData["Title"] = "Search";
}

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th>
                Gender
            </th>
            <th>
                LicenseNumber
            </th>
            <th class="text-center" colspan="2">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var renter in Model)
        {
            <tr>
                <th>
                    @renter.RenterId
                </th>
                <td width="20%">
                    @(renter.FirstName + " " + renter.LastName)
                </td>
                <td width="30%">
                    @renter.Address
                </td>
                <td>
                    @renter.Gender
                </td>
                <td>
                    @renter.LicenseNumber
                </td>
                <td class="text-center">
                    <a asp-controller="Renter" asp-action="Edit" asp-route-id="@renter.RenterId" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil"></i>
                    </a>
                </td>
                @{/*<td class="text-center">
                        <a asp-controller="Transaction" asp-action="Create" asp-route-id="@renter.RenterId" class="btn btn-success mx-2">
                            <i class="bi bi-car-front-fill"></i>
                        </a>
                    </td>*/}
                <td class="text-center">
                    <a asp-controller="Renter" asp-action="Delete" asp-route-id="@renter.RenterId" class="btn btn-danger mx-2">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>